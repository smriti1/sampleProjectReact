pipeline {
  agent any

  tools {
    nodejs 'NodeJs20'
  }

  stages {

    stage('Verify Node Version') {
      steps {
        sh 'node -v'
        sh 'npm -v'
      }
    }

    stage('Install Dependencies') {
      steps {
        sh 'npm install'
      }
    }

    stage('Build') {
      steps {
        sh 'npm run build'
      }
    }

  }
}
// only CI code is present for CD deployment you have to add more code